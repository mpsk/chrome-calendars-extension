{
  "manifest_version": 3,
  "name": "Multi-Account Calendar",
  "version": "1.0.0",
  "description": "Manage multiple Google Calendars",
  "permissions": [
    "identity",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://tasks.googleapis.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
